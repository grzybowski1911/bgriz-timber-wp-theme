<div id="mega-menu-full-image-dropdown" class="mt-1 bg-white shadow-sm border-y">
    <div class="grid max-w-screen-xl px-4 py-5 mx-auto text-sm md:grid-cols-2 md:px-6">
        <ul class="hidden mb-4 space-y-4 md:mb-0 md:block" aria-labelledby="mega-menu-full-image-button">
            {% for item in children %}
                {% if item.nav_title_item %}
                    <li class="font-extrabold highlight-txt">
                        {{ item.title }}
                    </li>
                {% else %}
                    <li>
                        <a href="#" class="hover:underline hover:text-blue-600 dark:hover:text-blue-500">
                            {{ item.title }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        {% for item in children %}
            {% if item.featured_item %}
                <a href="#" class="featured-item p-8 rounded-lg flex flex-col items-center">
                    <p class="max-w-xl mb-5 font-extrabold leading-tight tracking-tight text-white">{{ item.title }}</p>
                    <img src="{{item.featured_item_image['url']}}" alt="{{item.featured_item_image['alt']}}">
                    <button type="button" class="inline-flex items-center px-2.5 py-1.5 text-xs font-medium text-center text-white border border-white rounded-lg hover:bg-white hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-700">
                        Learn more
                        <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                        </svg>
                    </button>
                </a>
            {% endif %}
        {% endfor %}
    </div>
</div>