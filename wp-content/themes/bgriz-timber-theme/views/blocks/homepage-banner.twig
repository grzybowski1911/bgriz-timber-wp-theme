{#
/**
 * Block Name: Homepage Banner
 *
 * This is the template that displays the Homepage Banner block.
 */
#}

{% if is_preview %}
    <p>I will only appear in the editor.</p>
{% endif %}

<div id="homepage-banner-{{ block.id }}" class="wrapper">
    <h1>{{ fields.title }}</h1>
    <p>{{ fields.description }}</p>
</div>

<section id="homepage-banner-{{ block.id }}" class="homepage-banner wrapper" style="background-image: url('{{ fields.homepage_banner_bg_image['url'] }}');">
    <div class="logo-container">
        test
    </div>
</section>


<style type="text/css">
    #testimonial-{{ block.id }} {
        background: {{ fields.background_color }};
        color: {{ fields.text_color }};
    }
</style>