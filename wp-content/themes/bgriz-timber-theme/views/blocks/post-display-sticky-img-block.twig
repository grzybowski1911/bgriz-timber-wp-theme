{#
/**
 * Block Name: Post Display Sticky Img
 *
 * This is the template that displays the Post Display Sticky Img block.
 */
#}

{% if is_preview %}

{% endif %}

<div id="post-display-sticky-img-{{ block.id }}" class="post-display-sticky-img relative">

<div class="flex flex-wrap max-w-screen-xl mx-auto">
    <div class="w-full lg:w-2/3 p-4">
        {% set post_type = fields.post_type_selection %}
        {% set posts = get_custom_posts(post_type) %}
        {% if posts|length > 0 %}
            {% for post in posts %}
                <div class="mt-12 mb-12 ml-8 mr-8 flex flex-col md:flex-row">
                    <div class="content-contain m-4 md:w-3/4">
                        <h2>{{ post.post_title }}</h2>
                        <p>{{ post.post_excerpt }}</p>
                    </div>
                    <div class="img-contain m-4 md:w-1/4 flex justify-center items-center">
                        <img src="{{ post.thumbnail_url ? post.thumbnail_url : '/wp-content/uploads/2024/03/2021-logo.png' }}" alt="{% if post.alt %}{{ post.alt }}{% else %}Previous web development work company logo{% endif %}" class="max-w-full h-auto">
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>No posts found.</p>
        {% endif %}
    </div>
    <div class="w-full lg:w-1/3 p-4">
        <img class="sticky-img" src="{{ fields.sticky_image['url'] }}" alt="{% if fields.sticky_image['alt'] %}{{ fields.sticky_image['alt'] }}{% else %}Custom {% endif %}"/>
    </div>
</div>

</div>




